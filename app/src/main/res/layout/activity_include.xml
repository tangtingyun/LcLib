<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".work.bestpractice.IncludeActivity">

    <!--        android:id="@+id/include_refactor"-->

    <include
        android:id="@+id/ll_include_root"
        layout="@layout/item_include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ViewStub
        android:id="@+id/vs_place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_viewstub_content" />

    <Button
        android:id="@+id/btn_include_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="我是页面自身的按钮"
        android:textColor="@color/color_75_pure_black" />

    <ProgressBar
        android:id="@+id/pb_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>